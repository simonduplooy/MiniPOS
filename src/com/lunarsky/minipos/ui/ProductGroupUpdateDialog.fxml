<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <GridPane hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
         <children>
      <Label text="Name" GridPane.rowIndex="1" />
      <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="nameErrorLabel" styleClass="error-text" text="Group already exists" GridPane.columnIndex="1" />
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </center>
   <right>
    <VBox BorderPane.alignment="CENTER">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0" />
      <HBox alignment="CENTER_LEFT" spacing="5.0" />
   </children>
   </VBox>
   </right>
   <bottom>
<HBox alignment="BOTTOM_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
   <children>
      <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSave" text="Save" />
      <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
   </children>
         <padding>
            <Insets top="5.0" />
         </padding>
</HBox>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
