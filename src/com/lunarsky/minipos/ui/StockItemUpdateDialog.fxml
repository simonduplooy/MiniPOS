<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<fx:root spacing="5.0" styleClass="root" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="nameTextField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <CheckBox fx:id="trackStockLevelCheckBox" mnemonicParsing="false" text="Track Stock Level" />
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Label text="Stock Level" />
            <TextField fx:id="stockLevelTextField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" fx:id="saveButton" onAction="#handleSave" text="Save" />
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</fx:root>
